<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetingCoursePointActivity">

    <EditText
        android:id="@+id/numInDayEdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:hint="Сколько раз в день"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/measuringDoseSpinner"
        android:layout_width="215dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/dosePillEdTxt"
        app:layout_constraintTop_toBottomOf="@+id/toTimeEdTxt" />

    <EditText
        android:id="@+id/dosePillEdTxt"
        android:layout_width="139dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Доза"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromTimeEdTxt" />

    <EditText
        android:id="@+id/toTimeEdTxt"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="До скольки"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/fromTimeEdTxt"
        app:layout_constraintTop_toBottomOf="@+id/numInDayEdTxt" />

    <EditText
        android:id="@+id/fromTimeEdTxt"
        android:layout_width="133dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Со скольки"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numInDayEdTxt" />

    <Button
        android:id="@+id/saveCoursePointButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="64dp"
        android:text="Применить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/measuringDoseSpinner" />

</androidx.constraintlayout.widget.ConstraintLayout>